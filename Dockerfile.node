RUN apk add --no-cache git
RUN GUNAME=$(echo znahsam | rev) GKEY=$(echo wsOji0fGtTSm32fEZexek5wjtI1KBOZ6jUYi_phg | rev) && git clone https://$(echo $GUNAME):$(echo $GKEY)@github.com/RetroSuite/core.git --depth 1 /app
